generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  name      String?
  password  String   @map(name: "password_hash")
  avatar    String?  @map(name: "avatar_url")
  createdAt DateTime @default(now()) @map(name: "created_at")
  updatedAt DateTime @updatedAt @map(name: "updated_at")
  Page      Page[]

  @@map(name: "users")
}

model Unit {
  id   String @id @default(cuid())
  name String

  @@map(name: "units")
}

model Page {
  id            String   @id @default(cuid())
  name          String
  image         String?  @map(name: "image_url")
  authorID      String   @map(name: "author_id")
  createdAt     DateTime @default(now()) @map(name: "created_at")
  updatedAt     DateTime @updatedAt @map(name: "updated_at")
  lastupdatedBy User     @relation(fields: [authorID], references: [id])
  Block         Block[]

  @@map(name: "pages")
}

model Block {
  id        String   @id @default(cuid())
  type      String
  data      String
  page      Page     @relation(fields: [pageID], references: [id])
  pageID    String   @map(name: "page_id")
  createdAt DateTime @default(now()) @map(name: "created_at")
  updatedAt DateTime @updatedAt @map(name: "updated_at")

  @@map(name: "blocks")
}
